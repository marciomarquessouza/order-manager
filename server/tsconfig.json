{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "allowJs": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"],
            "@entities/*": ["entities/*"],
            "@repositories/*": ["repositories/*"],
            "@presenters/*": ["presenters/*"],
            "@infra/*": ["infra/*"],
            "@usecases/*": ["usecases/*"],
            "@main/*": ["main/*"]
        }
    },
    "include": ["src/**/*.ts"]
}
