{
    "name": "order-manager-server",
    "description": "NodeJs Rest API using Express, Typescript, Solid and TDD",
    "version": "1.0.0",
    "author": "Marcio Marques de Souza",
    "repository": "https://github.com/marciomarquessouza/order-manager",
    "license": "MIT",
    "scripts": {
        "test": "jest --passWithNoTests --runInBand --no-cache",
        "test:watch": "npx yarn test --watch",
        "dev": "tsnd --transpile-only --respawn --ignore-watch node_modules -r tsconfig-paths/register src/server.ts",
        "start": "node dist/server.js",
        "build": "rimraf dist && tsc -p tsconfig.json"
    },
    "devDependencies": {
        "@types/express": "^4.17.11",
        "@types/faker": "^5.5.3",
        "@types/jest": "^26.0.22",
        "@types/node": "^14.14.41",
        "@types/node-fetch": "^2.5.10",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "eslint": "^7.24.0",
        "eslint-config-google": "^0.14.0",
        "faker": "^5.5.3",
        "git-commit-msg-linter": "^3.1.0",
        "husky": "^4.2.5",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.4",
        "node-fetch": "^2.6.1",
        "rimraf": "^3.0.2",
        "supertest": "^6.1.3",
        "ts-jest": "^26.5.5",
        "ts-node-dev": "^1.1.6",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.2.4"
    },
    "dependencies": {
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "firebase-admin": "^9.6.0",
        "module-alias": "^2.2.2",
        "uuidv4": "^6.2.7",
        "validate": "^5.1.0"
    },
    "_moduleAliases": {
        "@": "dist",
        "@entities": "dist/entities",
        "@data": "dist/data/*",
        "@presenters": "dist/presenters",
        "@infra": "dist/infra",
        "@usecases": "dist/usecases",
        "@main/*": "dist/main"
    }
}
